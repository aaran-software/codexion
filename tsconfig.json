{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@resources/*": [
        "/resources/*"
      ],
//       "@/ui/*": ["./*"]
    },
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ]
  },
  "include": [
    "apps/*/src", "email.cjs"
  ]
}
